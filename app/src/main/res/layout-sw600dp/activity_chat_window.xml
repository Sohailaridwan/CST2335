<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sohaila.androidlabs.ChatWindow">

    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/chatlist_frameview"/>

    <ListView
        android:id="@+id/chatlist"
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />


    <EditText
        android:id="@+id/chat_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:inputType="textPersonName"
        android:text="Type here"
        android:ems="10"
        android:layout_toLeftOf="@+id/chat_send_btn"/>

    <Button
        android:id="@+id/chat_send_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chatlist"
        android:layout_alignEnd="@+id/chatlist"
        android:text="@string/chat_send_text"/>


</RelativeLayout>
